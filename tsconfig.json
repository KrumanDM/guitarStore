{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2016",
    "module": "commonjs",
    "jsx": "react-jsx",
    "typeRoots": ["node_modules/@types"],
    "types": ["react"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "src",

    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    "paths": {
      "app/*":["app/*"],
      "assets/*":["assets/*"],
      "pages/*":["pages/*"],
      "shared/*":["shared/*"],
    }
  }
}
